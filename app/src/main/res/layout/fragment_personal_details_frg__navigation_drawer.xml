<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.PersonalDetailsFrg_NavigationDrawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Personal Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Contact Person"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_contactperson_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:hint="Enter Contact Person"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contact Person Photo"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imageview_personaldetails"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image5"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_UploadImage_PersnalDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Upload"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@color/btn_login_bg"
            android:fontFamily="@font/imprima"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/btn_login"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Mobile Number"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_mobileNumber_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:maxLength="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="EnterMobile Number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Email Id"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_emailId_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Email Id"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Alternate Email Id"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_AlternatemailId_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Alternate EmailId"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Alternate Mobile Number"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_AlternateMobileNo_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Alternate Mobile Number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Telephone Number"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_telephone_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Telephone Number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Fax Number"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edit_faxnumber_personalDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Enter Fax Number"/>


        <Button
            android:id="@+id/btnUpdate_personaldetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Update"
            android:layout_gravity="center"
            android:background="@color/btn_login_bg"
            app:fontFamily="@font/imprima"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/btn_login"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"/>
    </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>



</ScrollView>