<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.BusinessDetails_Profile">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Business Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Company Name"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_name_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:hint="Enter name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Address"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_address_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:hint="Enter address"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="City/State"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_city_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:hint="Enter city"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Locality"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_locality_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter locality"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Postal/Zip code"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_postalcode_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter postalcode"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Year Of Establishment"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/edit_yearofestablishmnt_businessdetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter year of establishment"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:fontFamily="sans-serif-medium"
            android:text="Ownership Type"
            android:textSize="16sp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Spinner_businessdetails">

        </Spinner>


        <Button
            android:id="@+id/btnUpdate_businessdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Update"
            android:layout_gravity="center"
            android:background="@color/btn_login_bg"
            app:fontFamily="@font/imprima"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/btn_login"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>