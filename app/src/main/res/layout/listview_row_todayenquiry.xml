<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE "
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/date_todayenquiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "23/2/2019"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:singleLine = "false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Name "
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id = "@+id/categoryname_todayEnq"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "Housing"
                android:gravity="center"
                android:singleLine = "false" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/name_todayEnq"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "Housing"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:singleLine = "false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number "
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id = "@+id/mobileNo_todayEnq"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "9999999999"
                android:gravity="center"
                android:singleLine = "false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id = "@+id/email_todayEnq"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "abc@gmail.com"
                android:layout_marginLeft="90dp"
                android:gravity="center"
                android:singleLine = "false" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:gravity="center"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="16sp"/>


            <TextView
                android:id = "@+id/message_todayEnq"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text = "Hello This is android"
                android:layout_marginLeft="90dp"
                android:gravity="center"
                android:singleLine = "false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>